# CUA Configuration
# Get this key by visiting https://www.cua.ai/dashboard > API Keys > Create API Key
CUA_API_KEY=your_cua_api_key_here
# Get this string by visiting https://www.cua.ai/dashboard > Sandboxes > Copy the sandbox name
CUA_SANDBOX_NAME=m-linux-xxxxx

# OpenAI API Key
# Get this key by visiting https://platform.openai.com/api-keys > Create new secret key
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Configuration (automatically configured for Docker)
# For Docker: use service names (postgres, mongodb, minio)
# For local development: use localhost with port mappings
POSTGRES_URL=postgresql://hub:hubpassword@postgres:5432/hub
DATABASE_URL=postgresql://hub:hubpassword@postgres:5432/hub
MONGODB_URL=mongodb://admin:password@mongodb:27017

# MinIO Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Server Configuration
API_BASE=http://localhost:8000
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# LiteLLM Configuration
LITELLM_USE_RESPONSES_API=false
